@model IEnumerable<ParkingViolation.Models.Volunteer>

@{
	ViewBag.Title = "Volunteers";
}

<h2>Volunteers</h2>

<p>
	@Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "Volunteer", FormMethod.Get))
{
	<p>
		Filter by Name: @Html.TextBox("searchString")
		<input type="submit" value="Search" />
	</p>
}

<table class="table">
	<tr>
		<th>
			@Html.ActionLink(Html.DisplayNameFor(m => m.FirstMidName).ToHtmlString(), "Index", new { sortOrder = ViewBag.FirstNameSortOrder, searchString = ViewBag.CurrentFilter })
		</th>
		<th>
			@Html.ActionLink(Html.DisplayNameFor(m => m.LastName).ToHtmlString(), "Index", new { sortOrder = ViewBag.LastNameSortOrder, searchString = ViewBag.CurrentFilter })
		</th>
		<th>
			@Html.DisplayNameFor(model => model.PhoneNumber)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.EmailAddress)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.ActionLink(@Html.DisplayFor(modelItem => item.FirstMidName).ToString(), "Details", new { id = item.PersonID })
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.LastName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.PhoneNumber)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.EmailAddress)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id = item.PersonID }) |
				@*@Html.ActionLink("Details", "Details", new { id = item.PersonID }) |*@
				@Html.ActionLink("Delete", "Delete", new { id = item.PersonID })
			</td>
		</tr>
	}
</table>
